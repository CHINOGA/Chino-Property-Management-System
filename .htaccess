# Enable URL rewriting
RewriteEngine On

# Prevent redirect loops for assets/js directory
RewriteCond %{REQUEST_URI} ^/assets/js/
RewriteRule ^ - [L]

# Redirect all other requests to index.php or appropriate front controller
# (Adjust as per your routing needs)
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule . /index.php [L]

# Prevent access to PHP files in assets directory
<FilesMatch "^assets/.*\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
